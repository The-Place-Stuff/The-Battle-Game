{
    "format_version": "1.10.0",
    "animation_controllers": {
		"controller.animation.king_jello": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"jump": "!query.is_on_ground"
						}
					]
				},
				"jump": {
					"animations": [
						"jump"
					],
					"transitions": [
						{
							"grounded": "query.is_on_ground"
						}
					]
				},
				"grounded": {
					"animations": [
						"ground"
					],
					"transitions": [
						{
							"default": "query.any_animation_finished"
						}
					]
				}
			}
		},
        "controller.animation.king_jello.summon": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"summoning": "query.property('the_battle_game:state') == 'summoning' && query.property('the_battle_game:second_phase') == false"
						},
						{
							"rapid_summoning": "query.property('the_battle_game:state') == 'summoning' && query.property('the_battle_game:second_phase') == true"
						}
					]
				},
				"summoning": {
					"animations": [
						"summon"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'summoning'"
						}
					]
				},
				"rapid_summoning": {
					"animations": [
						"rapid_summon"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'summoning'"
						}
					]
				}
			}
		},
		"controller.animation.king_jello.roar": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"roaring": "query.property('the_battle_game:state') == 'roaring'"
						}
					]
				},
				"roaring": {
					"animations": [
						"roar"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'roaring'"
						}
					]
				}
			}
		}
    }
}