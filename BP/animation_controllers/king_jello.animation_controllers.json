{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.king_jello.leap": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"leap": "!query.is_on_ground"
						}
					]
				},
				"leap": {
					"on_exit": [
						"@s the_battle_game:perform_stomp_attack"
					],
					"transitions": [
						{
							"default": "query.is_on_ground"
						}
					]
				}
			}
		},
		"controller.animation.king_jello.summon": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"summoning": "query.property('the_battle_game:state') == 'summoning' && query.property('the_battle_game:second_phase') == false"
						},
						{
							"rapid_summoning": "query.property('the_battle_game:state') == 'summoning' && query.property('the_battle_game:second_phase') == true"
						}
					]
				},
				"summoning": {
					"animations": [
						"summon"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'summoning'"
						}
					]
				},
				"rapid_summoning": {
					"animations": [
						"rapid_summon"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'summoning'"
						}
					]
				}
			}
		},
		"controller.animation.king_jello.roar": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"roaring": "query.property('the_battle_game:state') == 'roaring' && query.property('the_battle_game:second_phase') == false"
						}
					]
				},
				"roaring": {
					"animations": [
						"roar"
					],
					"transitions": [
						{
							"default": "query.property('the_battle_game:state') != 'roaring'"
						}
					]
				}
			}
		}
	}
}