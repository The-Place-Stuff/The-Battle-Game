{
  "format_version": "1.20.40",
  "minecraft:entity": {
    "description": {
      "identifier": "rpg:pet_allay",
      "is_summonable": true,
      "is_spawnable": false
    },
    "component_groups": {
      "rpg:instant_despawn": {
        "minecraft:instant_despawn": {}
      },
      "rpg:tamed_allay": {
        "minecraft:is_tamed": {}
      },
      "rpg:pickup_cooldown": {
        "minecraft:timer": {
          "looping": false,
          "time": 3,
          "time_down_event": {
            "event": "rpg:finish_pickup_cooldown"
          }
        }
      },
      "rpg:can_pickup_items": {
        "minecraft:behavior.pickup_items": {
          "priority": 6,
          "max_dist": 16,
          "search_height": 16,
          "goal_radius": 2,
          "can_pickup_any_item": false,
          "pickup_based_on_chance": false,
          "pickup_same_items_as_in_hand": true,
          "track_target": true
        }
      }
    },
    "components": {
      "minecraft:health": {
        "value": 20,
        "max": 20
      },
      "minecraft:movement": {
        "value": 0.3
      },
      "minecraft:flying_speed": {
        "value": 0.3
      },
      "minecraft:collision_box": {
        "width": 0.35,
        "height": 0.6
      },
      "minecraft:inventory": {
        "inventory_size": 1
      },
      "minecraft:navigation.hover": {
        "can_path_over_water": true,
        "can_sink": false,
        "can_pass_doors": false,
        "can_path_from_air": true,
        "avoid_water": true,
        "avoid_damage_blocks": true,
        "avoid_sun": false
      },
      "minecraft:movement.hover": {},
      "minecraft:follow_range": {
        "value": 1024
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
                "test": "is_owner",
                "subject": "other",
                "value": true
              }
            },
            "give_item": true,
            "take_item": true
          }
        ]
      },
      "minecraft:equip_item": {},
      "minecraft:shareables": {
        "all_items": true,
        "items": [
          {
            "pickup_only": true,
            "stored_in_inventory": true
          }
        ]
      },
      "minecraft:behavior.equip_item": {
        "priority": 5
      },
      "minecraft:behavior.follow_owner": {
        "priority": 6,
        "start_distance": 16,
        "stop_distance": 4,
        "can_teleport": true
      },
      "minecraft:behavior.go_and_give_items_to_owner": {
        "priority": 3,
        "throw_sound": "item_thrown",
        "on_item_throw": [
          {
            "event": "rpg:start_pickup_cooldown"
          }
        ]
      },
      "minecraft:jump.static": {},
      "minecraft:can_fly": {},
      "minecraft:physics": {
        "has_gravity": true
      },
      "minecraft:pushable": {}
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "rpg:can_pickup_items"
          ]
        }
      },
      "rpg:start_pickup_cooldown": {
        "add": {
          "component_groups": [
            "rpg:pickup_cooldown"
          ]
        },
        "remove": {
          "component_groups": [
            "rpg:can_pickup_items"
          ]
        }
      },
      "rpg:finish_pickup_cooldown": {
        "add": {
          "component_groups": [
            "rpg:can_pickup_items"
          ]
        },
        "remove": {
          "component_groups": [
            "rpg:pickup_cooldown"
          ]
        }
      },
      "rpg:instant_despawn": {
        "add": {
          "component_groups": [
            "rpg:instant_despawn"
          ]
        }
      },
      "rpg:on_tame": {
        "add": {
          "component_groups": [
            "rpg:tamed_allay"
          ]
        }
      }
    }
  }
}