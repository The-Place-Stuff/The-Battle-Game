{
	"format_version": "1.19.40",
	"minecraft:entity": {
		"description": {
			"identifier": "the_battle_game:king_jello",
			"is_summonable": true,
			"is_spawnable": true,
			"properties": {
				"the_battle_game:state": {
					"client_sync": true,
					"type": "enum",
					"default": "none",
					"values": [
						"none",
						"leaping",
						"charging",
						"summoning",
						"roaring"
					]
				},
				"the_battle_game:second_phase": {
					"client_sync": true,
					"type": "bool",
					"default": false
				}
			},
			"animations": {
				"summon": "animation.king_jello.summon",
				"rapid_summon": "animation.king_jello.rapid_summon",
				"roar": "animation.king_jello.roar",
				"leap_controller": "controller.animation.king_jello.leap",
				"summon_controller": "controller.animation.king_jello.summon",
				"roar_controller": "controller.animation.king_jello.roar"
			},
			"scripts": {
				"animate": ["leap_controller", "summon_controller", "roar_controller"]
			}
		},
		"component_groups": {
			"the_battle_game:leaping_state": {
				"minecraft:movement": {
					"value": 1.0
				},
				"minecraft:movement.jump": {
					"jump_delay": [ 2, 3 ]
				},
				"minecraft:jump.static": {
					"jump_power": 1.25
				},
				"minecraft:timer": {
					"looping": true,
					"random_time_choices": [
						{
							"value": 8,
							"weight": 11
						},
						{
							"value": 6,
							"weight": 7
						},
						{
							"value": 2,
							"weight": 2
						}
					],
					"time_down_event": {
						"event": "the_battle_game:switch_state",
						"filters": {
							"all_of": [
								{
									"test": "on_ground",
									"value": true
								},
								{
									"test": "has_target",
									"value": true
								}
							]
						}
					}
				}
			},
			"the_battle_game:charging_state": {
				"minecraft:movement": {
					"value": 2.25
				},
				"minecraft:movement.jump": {
					"jump_delay": [ 1, 1 ]
				},
				"minecraft:jump.static": {
					"jump_power": 0.75
				},
				"minecraft:timer": {
					"looping": true,
					"time": 5,
					"time_down_event": {
						"event": "the_battle_game:switch_state",
						"target": "self"
					}
				}
			},
			"the_battle_game:summoning_state": {
				"minecraft:movement": {
					"value": 0.0
				},
				"minecraft:jump.static": {
					"jump_power": 0.0
				}
			},
			"the_battle_game:roaring_state": {
				"minecraft:movement": {
					"value": 0.0
				},
				"minecraft:jump.static": {
					"jump_power": 0.0
				}
			},
			"the_battle_game:movement_behaviors": {
				"minecraft:behavior.slime_attack": {
					"priority": 3,
					"set_persistent": true
				},
				"minecraft:behavior.slime_random_direction": {
					"priority": 4,
					"add_random_time_range": 3,
					"turn_range": 360,
					"min_change_direction_time": 2.0
				},
				"minecraft:behavior.slime_keep_on_jumping": {
					"priority": 5,
					"speed_multiplier": 1.0
				},
				"minecraft:behavior.slime_float": {
					"priority": 1,
					"jump_chance_percentage": 0.8,
					"speed_multiplier": 1.2
				}
			}
		},
		"components": {
			"minecraft:health": {
				"value": 400,
				"max": 400
			},
			"minecraft:movement": {
				"value": 1.0
			},
			"minecraft:jump.static": {
				"jump_power": 1.25
			},
			"minecraft:attack": {
				"damage": 4
			},
			"minecraft:knockback_resistance": {
				"value": 1.0
			},
			"minecraft:follow_range": {
				"value": 256
			},
			"minecraft:boss": {
				"hud_range": 256,
				"name": "King Jello",
				"should_darken_sky": false
			},
			"minecraft:area_attack": {
				"cause": "entity_attack",
				"damage_range": 0.5,
				"damage_per_tick": 5,
				"entity_filter": {
					"test": "is_target",
					"subject": "other"
				}
			},
			"minecraft:physics": {},
			"minecraft:navigation.walk": {
				"avoid_water": true,
				"can_path_over_water": true
			},
			"minecraft:persistent": {},
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"cause": "all",
						"on_damage": {
							"filters": {
								"test": "enum_property",
								"domain": "the_battle_game:state",
								"value": "roaring"
							}
						},
						"deals_damage": false
					},
					{
						"cause": "all",
						"on_damage": {
							"filters": {
								"all_of": [
									{
										"test": "enum_property",
										"domain": "the_battle_game:state",
										"value": "summoning"
									},
									{
										"test": "bool_property",
										"domain": "the_battle_game:second_phase",
										"value": true
									}
								]
							}
						},
						"damage_multiplier": 0.5
					},
					{
						"cause": "fall",
						"deals_damage": false
					},
					{
						"cause": "entity_explosion",
						"damage_multiplier": 0.5
					},
					{
						"cause": "projectile",
						"damage_multiplier": 1.5
					},
					{
						"cause": "magic",
						"damage_multiplier": 0.5
					}
				]
			},
			"minecraft:environment_sensor": {
				"triggers": [
					{
						"event": "the_battle_game:switch_to_roaring_state",
						"filters": {
							"all_of": [
								{
									"test": "actor_health",
									"operator": "<=",
									"value": 200
								},
								{
									"test": "bool_property",
									"domain": "the_battle_game:second_phase",
									"value": false
								},
								{
									"test": "enum_property",
									"domain": "the_battle_game:state",
									"operator": "not",
									"value": "roaring"
								},
								{
									"test": "on_ground",
									"value": true
								}
							]
						}
					}
				]
			},
			"minecraft:can_climb": {},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"entity_types": [
					{
						"max_dist": 256,
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "snowgolem"
								},
								{
									"test": "is_family",
									"subject": "other",
									"value": "irongolem"
								}
							]
						}
					}
				],
				"must_see": false,
				"persist_time": 0
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 5
			},
			"minecraft:type_family": {
				"family": [
                    "boss",
                    "king_jello",
					"slime",
					"monster",
					"mob"
				]
			},
			"minecraft:collision_box": {
				"height": 2,
				"width": 2
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"trigger": "the_battle_game:switch_to_leaping_state"
			},
			"the_battle_game:disable_ai": {
				"remove": {
					"component_groups": [
						"the_battle_game:leaping_state",
						"the_battle_game:charging_state",
						"the_battle_game:summoning_state",
						"the_battle_game:roaring_state",
						"the_battle_game:movement_behaviors"
					]
				},
				"set_property": {
					"the_battle_game:state": "'none'"
				}
			},
			"the_battle_game:toggle_second_phase": {
				"set_property": {
					"the_battle_game:second_phase": "query.property('the_battle_game:second_phase') == true ? false : true"
				}
			},
			"the_battle_game:switch_state": {
				"sequence": [
					{
						"sequence": [
							{
								"filters": {
									"all_of": [
										{
											"test": "bool_property",
											"domain": "the_battle_game:second_phase",
											"value": true
										},
										{
											"test": "target_distance",
											"operator": ">=",
											"value": 5
										}
									]
								},
								"trigger": "the_battle_game:switch_to_charging_state"
							},
							{
								"filters": {
									"any_of": [
										{
											"test": "bool_property",
											"domain": "the_battle_game:second_phase",
											"value": false
										},
										{
											"test": "target_distance",
											"operator": "<",
											"value": 5
										}
									]
								},
								"trigger": "the_battle_game:switch_to_summoning_state"
							}
						],
						"filters": {
							"test": "enum_property",
							"domain": "the_battle_game:state",
							"value": "leaping"
						}
					},
					{
						"randomize": [
							{
								"trigger": "the_battle_game:switch_to_leaping_state",
								"weight": 2
							},
							{
								"filters": {
									"test": "on_ground",
									"value": true
								},
								"trigger": "the_battle_game:switch_to_summoning_state",
								"weight": 3
							}
						],
						"filters": {
							"test": "enum_property",
							"domain": "the_battle_game:state",
							"value": "charging"
						}
					}
				]
			},
			"the_battle_game:switch_to_leaping_state": {
				"add": {
					"component_groups": [
						"the_battle_game:leaping_state",
						"the_battle_game:movement_behaviors"
					]
				},
				"remove": {
					"component_groups": [
						"the_battle_game:charging_state",
						"the_battle_game:summoning_state",
						"the_battle_game:roaring_state"
					]
				},
				"set_property": {
					"the_battle_game:state": "'leaping'"
				}
			},
			"the_battle_game:switch_to_charging_state": {
				"add": {
					"component_groups": [
						"the_battle_game:charging_state",
						"the_battle_game:movement_behaviors"
					]
				},
				"remove": {
					"component_groups": [
						"the_battle_game:leaping_state",
						"the_battle_game:summoning_state",
						"the_battle_game:roaring_state"
					]
				},
				"set_property": {
					"the_battle_game:state": "'charging'"
				}
			},
			"the_battle_game:switch_to_summoning_state": {
				"add": {
					"component_groups": [
						"the_battle_game:summoning_state"
					]
				},
				"remove": {
					"component_groups": [
						"the_battle_game:leaping_state",
						"the_battle_game:charging_state",
						"the_battle_game:roaring_state",
						"the_battle_game:movement_behaviors"
					]
				},
				"set_property": {
					"the_battle_game:state": "'summoning'"
				}
			},
			"the_battle_game:switch_to_roaring_state": {
				"add": {
					"component_groups": [
						"the_battle_game:roaring_state"
					]
				},
				"remove": {
					"component_groups": [
						"the_battle_game:leaping_state",
						"the_battle_game:charging_state",
						"the_battle_game:summoning_state",
						"the_battle_game:movement_behaviors"
					]
				},
				"set_property": {
					"the_battle_game:state": "'roaring'"
				}
			},

			// Scripted events
			"the_battle_game:perform_stomp_attack": {},
			"the_battle_game:summon_minion": {},
			"the_battle_game:perform_knockback_roar": {}
		}
	}
}